@model PROMPERU.AULAVIRTUAL.BE.CMS.CMS_Agenda

@{
    ViewBag.Title = "Agenda";
}
<style>
    .checkbox input[type="checkbox"] {
        display: block;
        position: inherit;
        margin-left: 0;
    }
</style>

<div class="container-fluid container-fixed-lg">
    <div class="panel panel-default">
        <div class="panel-body">
            <h2>Agenda</h2>

            @using (Html.BeginForm("AddEditAgenda","CMS",FormMethod.Post, new { @enctype="multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Agenda</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", required="required" })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Fecha de Inicio", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DateTextBoxFor(model => model.FechaInicio, new { @class = "form-control", required="required" })
                            @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Fecha de Fin", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DateTextBoxFor(model => model.FechaFin, new { @class = "form-control", required="required" })
                            @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Imagen", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBox("FileImagen",null, new { @class = "", @type = "file" })
                            @Html.ValidationMessageFor(model => model.Imagen, "", new { @class = "text-danger" })
                            <p class="" style="margin: 10px 0 0 0;">Tamaño recomendado: 569 x 361px</p>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Sumilla", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Sumilla, new { @class = "form-control", required="required" })
                            @Html.ValidationMessageFor(model => model.Sumilla, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Archivo", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBox("FileArchivo",null, new { @class = "", @type = "file" })
                            @Html.ValidationMessageFor(model => model.Archivo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Ruta de Inscripción", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.RutaInscripcion, new { @class = "form-control", @type = "url" })
                            @Html.ValidationMessageFor(model => model.RutaInscripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("¿Publicado?", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(model => model.EsPublicado)
                                @Html.ValidationMessageFor(model => model.EsPublicado, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Cancelar", "ListAgenda")
            </div>
        </div>
    </div>
</div>