@model PROMPERU.AULAVIRTUAL.BE.CMS.CMS_Banner

@{
    ViewBag.Title = "Banner";
}
<style>
    .checkbox input[type="checkbox"] {
        display: block;
        position: inherit;
        margin-left: 0;
    }
</style>

<div class="container-fluid container-fixed-lg">
    <div class="panel panel-default">
        <div class="panel-body">
            <h2>Banner</h2>

            @using (Html.BeginForm("AddEditBanner","CMS",FormMethod.Post, new { @enctype="multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Banner</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.Label("Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Imagen", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("FileImagen", null, new { @class = "", @type = "file" })
                    @Html.ValidationMessageFor(model => model.Imagen, "", new { @class = "text-danger" })

                    <p class="" style="margin: 10px 0 0 0;">Tamaño recomendado: 1440 x 700px</p>
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Título Superior", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.TituloSuperior, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.TituloSuperior, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Título Inferior", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.TituloInferior, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.TituloInferior, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="display:none">
                @Html.Label("Sub Título", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.SubTitulo, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.SubTitulo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("¿Publicado?", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(model => model.EsPublicado)
                        @Html.ValidationMessageFor(model => model.EsPublicado, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
        </div>
            }

            <div>
                @Html.ActionLink("Cancelar", "ListBanner")
            </div>
        </div>
    </div>
</div>