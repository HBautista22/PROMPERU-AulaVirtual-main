@model PROMPERU.AULAVIRTUAL.BE.CMS.CMS_PreguntaFrecuente

@{
    ViewBag.Title = "Pregunta Frecuente";
}
    <style>
        .checkbox input[type="checkbox"] {
            display: block;
            position: inherit;
            margin-left: 0;
        }
    </style>

<div class="container-fluid container-fixed-lg">
    <div class="panel panel-default">
        <div class="panel-body">
            <h2>Pregunta Frecuente</h2>


            @using (Html.BeginForm("AddEditPreguntaFrecuente", "CMS", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Pregunta Frecuente</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.Label("Pregunta", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Pregunta, new { @class = "form-control", required="required" })
                            @Html.ValidationMessageFor(model => model.Pregunta, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Respuesta", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Respuesta, new { @class = "form-control", required="required" })
                            @Html.ValidationMessageFor(model => model.Respuesta, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("¿Publicado?", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(model => model.EsPublicado)
                                @Html.ValidationMessageFor(model => model.EsPublicado, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Cancelar", "ListPreguntaFrecuente")
            </div>
        </div>
    </div>
</div>