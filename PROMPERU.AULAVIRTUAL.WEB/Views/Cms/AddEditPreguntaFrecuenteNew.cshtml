@model PROMPERU.AULAVIRTUAL.BE.CMS.CMS_PreguntaFrecuente
@{
    ViewBag.Title = "AddEditPreguntaFrecuenteNew";
    Layout = "~/Views/Shared/_LayoutDashbord.cshtml";
}

@section Breadcrumbs{
    <div class="row mb-2">
        <div class="col-sm-12">
            <ol class="breadcrumb float-sm-left">
                <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                <li class="breadcrumb-item active">Preguntas frecuentes</li>
            </ol>
        </div>
        <div class="col-sm-6">
            <h2 class="m-0">Preguntas frecuentes</h2>
        </div>
    </div><!-- /.row -->
}
<div class="row">
    <div class="col-lg-12 box-grey-content">
        <h2>Agregar Preguntas frecuentes</h2>
        <div class="content-form-grey">
            <form method="post" id="searchUser">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="">Nombre</label>

                            @Html.TextBoxFor(model => model.Pregunta, new { @class = "form-control", required = "required", @placeholder = "Ingresar pregunta" })
                            @Html.ValidationMessageFor(model => model.Pregunta, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="">Respuesta</label>

                            @Html.TextBoxFor(model => model.Respuesta, new { @class = "form-control", required = "required", @placeholder = "Ingresar repuesta" })
                            @Html.ValidationMessageFor(model => model.Respuesta, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="col-sm-12">
                        <div class="form-group">
                            <div class="icheck-primary activo-2">
                                @Html.CheckBoxFor(m => m.EsPublicado, new { @checked = "checked" })
                                <label for="EsPublicado">
                                    ¿Está activo?
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 form-btn">
                        <input type="submit" class="btn btn-primary" value="Guardar">
                        <a href="@Url.Action("ListPreguntaFrecuente","CMS")" class="btn btn-secondary">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


