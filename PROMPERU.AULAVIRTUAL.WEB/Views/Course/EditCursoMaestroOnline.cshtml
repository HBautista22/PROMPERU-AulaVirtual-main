@model PROMPERU.AULAVIRTUAL.WEB.ViewModel.Course.EditCursoMaestroOnlineViewModel

@{
    ViewBag.Title = "Agregar Curso";
    ViewBag.Icon = "book";
    ViewBag.Seccion = "Cursos";
    ViewBag.SubSeccion = "Cursos";
}

@section Breadcrumbs{
    <li><a href="@Url.Action("ListCursoOnlineAdmin", "Course")">Cursos</a></li>
    @if (Model.CursoOnlineId.HasValue)
    {
        <li><a href="@Url.Action("ViewCursoMaestroOnlineAdmin", "Course", new { CursoOnlineId = Model.CursoOnlineId })">@Model.Nombre</a></li>
    }

}

<div class="container-fluid container-fixed-lg">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-heading">
                    <h3 class="usuarios">@ViewBag.Title</h3>
                </div>

                <form class="form form-horizontal fondo-generico" method="post" enctype="multipart/form-data">
                    <div class="panel-body">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x => x.CursoOnlineId)

                        @*@Html.EditorFor(x => x.Codigo)*@
                        <div class='form-group'>
                            <div class="col-sm-6 m-t-10">
                                <div class="row">
                                    <div class="col-sm-12 m-l-20">
                                        @Html.LabelFor(x => x.Codigo, new { @class = "col-sm-6 control-label text-add-categoria" })
                                    </div>
                                    <div class='col-sm-12'>
                                        @Html.TextBoxFor(x => x.Codigo, new { @class = "form-control bg" })
                                        @Html.ValidationMessageFor(x => x.Codigo)
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 m-t-10">
                                <div class="row">
                                    <div class="col-sm-12 m-l-20">
                                        @Html.LabelFor(x => x.CategoriaCursoOnlineId, new { @class = "col-sm-3 control-label text-add-categoria" })
                                    </div>
                                    <div class='col-sm-12'>
                                        @Html.DropDownListFor(x => x.CategoriaCursoOnlineId, new SelectList(Model.LstCategoriaCursoOnline, "CategoriaCursoOnlineId", "Nombre"), "[- Seleccionar -]", new { @class = "form-control bg" })
                                        @Html.ValidationMessageFor(x => x.CategoriaCursoOnlineId)
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 m-t-10">
                                <div class="row">
                                    <div class="col-sm-12 m-l-20">
                                        @Html.LabelFor(x => x.Nombre, new { @class = "col-sm-6 control-label text-add-categoria" })
                                    </div>
                                    <div class='col-sm-12'>
                                        @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control bg" })
                                        @Html.ValidationMessageFor(x => x.Nombre)
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 m-t-10">
                                <div class="row">
                                    <div class="col-sm-12 m-l-20">
                                        @Html.LabelFor(x => x.RutaImagen, new { @class = "col-sm-6 control-label text-add-categoria" })
                                    </div>
                                    <div class='col-sm-12'>
                                        @Html.HiddenFor(x => x.RutaImagen)
                                        @if (!String.IsNullOrEmpty(Model.RutaImagen))
                                        {
                                            <img class="img-responsive" src="@(Url.Content(ConstantHelpers.DEFAULT_SERVER_PATH + Model.RutaImagen))" height="100" />
                                        }
                                        <input type="file" name="@Html.NameFor(x => x.ArchivoImagen)" id="@Html.IdFor(x => x.ArchivoImagen)" title="Seleccionar archivo" class="form-control col-sm-9" />
                                        @Html.ValidationMessageFor(x => x.ArchivoImagen)
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12 m-t-10">
                                <div class="row">
                                    <div class="col-sm-12 m-l-20">
                                        @Html.LabelFor(x => x.Descripcion, new { @class = "col-sm-6 control-label text-add-categoria" })
                                    </div>
                                    <div class='col-sm-12'>
                                        @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control wysiwyg", placeholder = "Escriba la descripccion del Curso", rows = "10" })
                                        @Html.ValidationMessageFor(x => x.Descripcion)
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 m-t-10">
                                <div class="row">
                                    <div class="col-sm-12 m-l-20">
                                        @Html.LabelFor(x => x.NumPreguntasEvaluacion, new { @class = "col-sm-6 control-label text-add-categoria" })
                                    </div>
                                    <div class='col-sm-12'>
                                        @Html.TextBoxFor(x => x.NumPreguntasEvaluacion, new { @class = "form-control bg" })
                                        @Html.ValidationMessageFor(x => x.NumPreguntasEvaluacion)
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 m-t-10">
                                <div class="row">
                                    <div class="col-sm-12 m-l-20">
                                        @Html.LabelFor(x => x.TiempoEvaluacion, new { @class = "col-sm-6 control-label text-add-categoria" })
                                    </div>
                                    <div class='col-sm-12'>
                                        @Html.TextBoxFor(x => x.TiempoEvaluacion, new { @class = "form-control bg" })
                                        @Html.ValidationMessageFor(x => x.TiempoEvaluacion)
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 m-t-10">
                                <div class="row">
                                    <div class="col-sm-12 m-l-20">
                                        @Html.LabelFor(x => x.PorcentajeAprobacion, new { @class = "col-sm-6 control-label text-add-categoria" })
                                    </div>
                                    <div class='col-sm-12'>
                                        @Html.TextBoxFor(x => x.PorcentajeAprobacion, new { @class = "form-control bg" })
                                        @Html.ValidationMessageFor(x => x.PorcentajeAprobacion)
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6 m-t-10">
                                @if (Model.RutaBanner == null)
                                {
                                    <div class="row">
                                        <div class="col-sm-12 m-l-20">
                                            @Html.LabelFor(m => m.BannerImage, new { @class = "col-sm-3 control-label text-add-categoria" })
                                        </div>
                                        <div class='col-sm-12'>
                                            @Html.TextBoxFor(m => m.BannerImage, new { @class = "form-control bg", @type = "file", @accept = "image/png" })
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="row">
                                        <div class="col-sm-12 m-l-20">
                                            @Html.LabelFor(m => m.BannerImage, new { @class = "col-sm-3 control-label text-add-categoria" })
                                        </div>
                                        <div class='col-sm-12'>
                                            <a class="btn btn-xs" @Data.ModalLink("_ViewContentAdditionalFile", new { CursoOnlineId = Model.CursoOnlineId, hasFile = true })><i class="fa fa-eye"></i> Ver archivo</a>
                                            <a class="btn btn-xs" onclick="editFileSection(0)"><i class="fa fa-pencil"></i> Cambiar</a>
                                            <div id="editfile" style="display:none">
                                                @Html.TextBoxFor(m => m.BannerImage, new { @class = "form-control bg", @type = "file", @accept = "application/pdf,video/mp4,video/x-m4v,video/*" })
                                                <a class="btn btn-xs btn-danger" onclick="editFileSection(1)"><i class="fa fa-pencil"></i> Cancelar</a>
                                            </div>
                                        </div>
                                    </div>

                                }
                            </div>


                        </div>

                        @*@Html.EditorFor(x => x.Nombre)*@
                        @*<div class="form-group">
                            @Html.LabelFor(x => x.Descripcion, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control wysiwyg", placeholder = "Escriba la descripccion del Curso", rows = "10" })
                                @Html.ValidationMessageFor(x => x.Descripcion)
                            </div>
                        </div>

                        @Html.EditorFor(x => x.NumPreguntasEvaluacion)
                        @Html.EditorFor(x => x.TiempoEvaluacion)
                        @Html.EditorFor(x => x.PorcentajeAprobacion)*@

                        @Html.EditorFor(x => x.Estado)
                        @Html.EditorFor(x => x.TieneExamen)
                        @Html.EditorFor(x => x.AutoMatricula)
                        @Html.EditorFor(x => x.ReinicioScorm)

                        <div class="form-group">
                            <div class="col-sm-12 col-sm-offset-4">
                                <button class="btn btn-guardar-matricula pull-center text-btn-generico" type="submit">Guardar</button>
                                @if (Model.CursoOnlineId.HasValue)
                                {
                                    @*<a class="btn btn-cancelar pull-center text-btn-generico" href="@Url.Action("ViewCursoOnlineAdmin", "Course", new { CursoOnlineId = Model.CursoOnlineId })">Cancelar</a>*@
                                    <a class="btn btn-cancelar pull-center text-btn-generico" href="@Url.Action("ListCursoOnlineAdminMaestro", "Course")">Cancelar</a>
                                }
                                else
                                {
                                    <a class="btn btn-cancelar pull-center text-btn-generico" href="@Url.Action("ListCursoOnlineAdminMaestro", "Course")">Cancelar</a>
                                }
                            </div>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $('#PorcentajeAprobacion').numericInput({ allowFloat: true });

        function editFileSection(option) {

            var target = $('#editfile');

            if (option === 0) {
                target.show('slow');
            } else {
                target.hide('slow');
                $('#BannerImage').val('');
            }

        }

    </script>
}
