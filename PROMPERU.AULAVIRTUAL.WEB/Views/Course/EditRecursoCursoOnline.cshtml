@model PROMPERU.AULAVIRTUAL.WEB.ViewModel.Course.EditRecursoCursoOnlineViewModel

@{
    ViewBag.Title = "RecursoCursoOnline";
    ViewBag.Seccion = "Cursos";
    ViewBag.SubSeccion = "Cursos";    
}

@section Breadcrumbs{
    <li><a href="@Url.Action("ListRecursoCursoOnline", "Course")">@ViewBag.Title</a></li>
    
}

<div class="container-fluid container-fixed-lg">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
					
                <div class="panel-heading">
                    <h3 class="panel-title">RecursoCursoOnline</h3>
                </div>
					
				<form class="form form-horizontal" method="post">
                    <div class="panel-body">
							@Html.HiddenFor(x=>x.RecursoCursoOnlineId)
						
							@Html.EditorFor(x=>x.Nombre)
							@Html.EditorFor(x=>x.Ruta)
							@Html.EditorFor(x=>x.Tipo)
							@Html.EditorFor(x=>x.Estado)
							<div class='form-group'>
								@Html.LabelFor(x=>x.UnidadCursoOnlineId, new { @class="col-sm-3 control-label"})
								<div class='col-sm-9'>
									@Html.DropDownListFor(x => x.UnidadCursoOnlineId, new SelectList(Model.LstUnidadCursoOnline,"UnidadCursoOnlineId","@_DEF_Nombre"),"[- Seleccionar -]", new { @class="form-control"})
									@Html.ValidationMessageFor(x => x.UnidadCursoOnlineId)
								</div>
							</div>
					</div>
					
					<div class="panel-footer">
						<div class="row">
                            <div class="col-sm-9 col-sm-offset-3">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-check"></i>&nbsp;Guardar</button>
								<a class="btn btn-default" href="@Url.Action("ListRecursoCursoOnline", "Course")"><i class="fa fa-ban"></i>&nbsp;Cancelar</a>
							</div>
						</div>
					</div>
					
				</form>
				
            </div>
        </div>
    </div>
</div>
