
@{
    ViewBag.Title = "ListEnlacesInteres";
    Layout = "~/Views/Shared/_LayoutDashbord.cshtml";
    ViewBag.SubSeccion = "ViewEnlaceInteresOnline";
}
@section Breadcrumbs{
    <div class="row mb-2">
        <ol class="breadcrumb float-sm-left">
            <li class="breadcrumb-item"><a href="#">Inicio</a></li>
            <li class="breadcrumb-item active">Enlaces de Interés</li>
        </ol>
    </div>
    <div class="col-sm-6">
        <h2 class="m-0">Enlaces de Interés</h2>
    </div>
}
<div class="row mb-2">
    <section class="col-lg-12">
        <!-- .card -->
        <div class="content-mis-cursos">
            <div class="grid-items">

                @foreach (var link in Model.LstEnlancesInteresOnline)
                {
                    <div class="item-card enlaces-interes">
                        <a href="#"></a>
                        <div class="image">
                            <img src="@Url.Content(link.Imagen)" alt="@link.Titulo">
                        </div>
                        <div class="body-card">
                            <h2>@link.Titulo</h2>
                            <p>@link.Descripcion</p>
                            <div class="footer-card">
                                <span class="btns-card">Ver más <i class="fas fa-chevron-right"></i></span>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <!-- /.card -->
    </section>
    </div>