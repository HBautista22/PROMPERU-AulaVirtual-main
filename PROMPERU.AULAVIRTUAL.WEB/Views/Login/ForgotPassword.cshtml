@model PROMPERU.AULAVIRTUAL.WEB.ViewModel.Home.ForgotPasswordViewModel

@{
    ViewBag.Title = "Olvide mi contraseña";
    //Layout = "~/Views/Shared/_FrontLayout.cshtml";
    Layout = "~/Views/Shared/_Layout_new.cshtml";
}

<section class="seccion formularios" style="background: url(@("imagenlogin".Label())); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div class="content">
        <div class="content-form content-form-login">
            <div class="container">
                <div class="intro-text" style="text-align: -webkit-center;">
                    <div class="form-group text-center"><div class="lb-login-iniciar">Inicia Sesión</div></div>
                    <div class="col-md-12" style="text-align: -moz-center;">
                        @MessageHelpers.ShowMessages(TempData)
                        <form action="@Url.Action("ForgotPassword","Login")" class="form-login" role="form" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group text-left">
                                @*Html.LabelFor(x => Model.Codigo)*@
                                <label for="Email">Correo</label>
                                @Html.TextBoxFor(x => Model.Codigo, new { @class = "form-control frm-login frm-event", @placeholder = "Correo" })
                                @Html.ValidationMessageFor(x => Model.Codigo)
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Enviar nueva contraseña</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>

