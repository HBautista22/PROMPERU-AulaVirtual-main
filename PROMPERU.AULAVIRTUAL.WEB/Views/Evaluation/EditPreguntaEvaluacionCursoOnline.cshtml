@model PROMPERU.AULAVIRTUAL.WEB.ViewModel.Evaluation.EditPreguntaEvaluacionCursoOnlineViewModel

@{
    ViewBag.Title = "PreguntaEvaluacionCursoOnline";
}

@section Breadcrumbs{
    <li><a href="@Url.Action("ListPreguntaEvaluacionCursoOnline", "Course")">@ViewBag.Title</a></li>
    
}

<div class="container-fluid container-fixed-lg">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
					
                <div class="panel-heading">
                    <h3 class="panel-title">PreguntaEvaluacionCursoOnline</h3>
                </div>
					
				<form class="form form-horizontal" method="post">
                    <div class="panel-body">
							@Html.HiddenFor(x=>x.PreguntaEvaluacionCursoOnlineId)
						
							<div class='form-group'>
								@Html.LabelFor(x=>x.EvaluacionCursoOnlineId, new { @class="col-sm-3 control-label"})
								<div class='col-sm-9'>
									@Html.DropDownListFor(x => x.EvaluacionCursoOnlineId, new SelectList(Model.LstEvaluacionCursoOnline,"EvaluacionCursoOnlineId","@_DEF_Nombre"),"[- Seleccionar -]", new { @class="form-control"})
									@Html.ValidationMessageFor(x => x.EvaluacionCursoOnlineId)
								</div>
							</div>
							<div class='form-group'>
								@Html.LabelFor(x=>x.PreguntaCursoOnlineId, new { @class="col-sm-3 control-label"})
								<div class='col-sm-9'>
									@Html.DropDownListFor(x => x.PreguntaCursoOnlineId, new SelectList(Model.LstPreguntaCursoOnline,"PreguntaCursoOnlineId","@_DEF_Nombre"),"[- Seleccionar -]", new { @class="form-control"})
									@Html.ValidationMessageFor(x => x.PreguntaCursoOnlineId)
								</div>
							</div>
							@Html.EditorFor(x=>x.TieneRespuestaCorrecta)
					</div>
					
					<div class="panel-footer">
						<div class="row">
                            <div class="col-sm-9 col-sm-offset-3">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-check"></i>&nbsp;Guardar</button>
								<a class="btn btn-default" href="@Url.Action("ListPreguntaEvaluacionCursoOnline", "Course")"><i class="fa fa-ban"></i>&nbsp;Cancelar</a>
							</div>
						</div>
					</div>
					
				</form>
				
            </div>
        </div>
    </div>
</div>
